{
  "name": "@agency-kit/notion-cms",
  "version": "0.7.1",
  "description": "Turn Notion into a headless content management system with this utility set.",
  "author": "Jacob Milhorn",
  "license": "MIT",
  "homepage": "https://github.com/agency-kit/notion-cms#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agency-kit/notion-cms.git"
  },
  "bugs": {
    "url": "https://github.com/agency-kit/notion-cms/issues"
  },
  "keywords": [
    "notion",
    "content",
    "content management",
    "cms",
    "notion-cms",
    "notion cms",
    "notion content management",
    "static site generation",
    "ssg",
    "ssr",
    "server side rendered",
    "server rendered",
    "node",
    "11ty",
    "eleventy",
    "headless cms",
    "headless content management system",
    "framework agnostic",
    "agnostic"
  ],
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.mjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "watch": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 chokidar \"src/**/*.ts\" -c \"rollup -c && tsc --project ./tsconfig.json && npx uvu test\"",
    "test:no-mock": "node test/notion-cms.spec.js true",
    "build": "rm -rf dist && tsc --project ./tsconfig.json && rollup -c",
    "build:dts": "rm -rf dist && tsc --project ./tsconfig.json && rollup -c && npm run dts",
    "dts": "dts-bundle-generator -o index.d.ts src/index.ts --no-check && rm -rf .tmp",
    "test": "NODE_OPTIONS='--enable-source-maps' npx c8 uvu test",
    "build:test": "npm run build:dts && npm run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "changeset publish"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.3",
    "flatted": "^3.2.7",
    "highlight.js": "^11.7.0",
    "human-interval": "^2.0.1",
    "lodash": "^4.17.21",
    "marked": "^5.0.2",
    "marked-gfm-heading-id": "^3.0.3",
    "notion-utils": "^6.16.0",
    "serialize-javascript": "^6.0.1",
    "walkjs": "^4.0.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.6",
    "@changesets/cli": "^2.26.1",
    "@notion-stuff/v4-types": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/lodash": "^4.14.191",
    "@types/marked": "^4.0.8",
    "@types/node": "^20.1.5",
    "@types/serialize-javascript": "^5.0.2",
    "bottleneck": "^2.19.5",
    "c8": "^7.13.0",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.0.3",
    "dts-bundle-generator": "^8.0.0",
    "esbuild": "^0.17.11",
    "nock": "^13.3.0",
    "rollup": "^3.19.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "terser": "^5.16.6",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
